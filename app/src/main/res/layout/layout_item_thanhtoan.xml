<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:background="@drawable/custom_rv_hdct"
    android:paddingBottom="10dp"
    android:layout_marginTop="22dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_hdct_anhxe"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_hdct_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_toRightOf="@id/iv_hdct_anhxe"
        android:fontFamily="@font/poppinregular"
        android:text="TextView"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_hdct_name_xe"
        tools:ignore="NotSibling" />

    <TextView
            android:id="@+id/tv_hdct_name_xe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="7dp"
            android:text="TextView"
            android:textSize="17dp"
            android:fontFamily="@font/poppinblack_medium"
            android:letterSpacing="0.025"
            android:textColor="@color/dennhat"
            app:layout_constraintStart_toEndOf="@+id/cardView2"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hdct_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/poppinblack_medium"
        android:letterSpacing="0.025"
        android:text="TextView"
        android:textColor="@color/dennhat"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hdct_tongtien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/poppinblack_medium"
        android:letterSpacing="0.025"
        android:text="TextView"
        android:textColor="@color/dennhat"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>