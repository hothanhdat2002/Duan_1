<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/custom_item_xe"
    android:layout_marginBottom="100dp"
    android:layout_height="200dp">


    <ImageView
        android:id="@+id/iv_xe"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginStart="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        app:cardCornerRadius="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_color_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name_xe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:hint="Tên xe"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/iv_xe"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:hint="Giá tiền"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/iv_xe"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_xe" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:hint="Số lượng"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/iv_xe"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_xe" />

    <ImageView
        android:id="@+id/iv_hangxe"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_xe"
        app:layout_constraintEnd_toEndOf="@+id/iv_xe"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="@+id/iv_xe"
        app:srcCompat="@drawable/bongxe" />


</androidx.constraintlayout.widget.ConstraintLayout>