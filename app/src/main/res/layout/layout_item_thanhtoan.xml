<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:paddingRight="17dp"
    android:paddingLeft="15dp"
    android:paddingTop="5dp"
    android:background="@drawable/custom_rv_thanhtoan"
    android:paddingBottom="10dp"
    android:layout_marginTop="5dp">

    <ImageButton
        android:id="@+id/btn_delete_thanhtoan"
        android:layout_width="17dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/xoa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/iv_hdct_anhxe"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_hdct_anhxe"
        app:layout_constraintEnd_toEndOf="@+id/iv_hdct_anhxe"
        app:layout_constraintStart_toStartOf="@+id/iv_hdct_anhxe"
        app:srcCompat="@drawable/bongxe" />
    <TextView
        android:id="@+id/tv_hdct_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@id/iv_hdct_anhxe"
        android:fontFamily="@font/poppinregular"
        android:text="TextView"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_hdct_gia"
        app:layout_constraintEnd_toEndOf="@+id/tv_hdct_gia"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/tv_hdct_name_xe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/popp_semol"
        android:letterSpacing="0.025"
        android:text="TextView"
        android:textColor="@color/dennhat"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_hdct_amount"
        app:layout_constraintEnd_toEndOf="@+id/tv_hdct_amount" />

    <TextView
        android:id="@+id/tv_hdct_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/poppinregular"
        android:letterSpacing="0.025"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="13.5dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_hdct_tongtien"
        app:layout_constraintEnd_toEndOf="@+id/tv_hdct_tongtien" />

    <TextView
        android:id="@+id/tv_hdct_tongtien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/poppinregular"
        android:letterSpacing="0.025"
        android:text="TextView"
        android:padding="7dp"

        android:background="@drawable/custom_btn_tang"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Detail MotoCycle"
        android:textSize="13dp"
        android:textColor="@color/mauxanh"
        android:fontFamily="@font/poppinregular"
        app:layout_constraintEnd_toEndOf="@+id/iv_hdct_anhxe"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="@+id/iv_hdct_anhxe"
        app:layout_constraintTop_toBottomOf="@+id/iv_hdct_anhxe" />


</androidx.constraintlayout.widget.ConstraintLayout>