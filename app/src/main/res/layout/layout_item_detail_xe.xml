<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="20dp"
        android:backgroundTint="#E6E6E6"
        android:background="@drawable/custom_item_hangxe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:background="@drawable/custom_item_hangxe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_detail_logo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ducati_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_roadking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-15dp"
                android:layout_marginLeft="-5dp"
                android:fontFamily="@font/popp"
                android:text="ROAD KING, 2021"
                android:textAllCaps="true"

                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_detail_logo"
                app:layout_constraintEnd_toEndOf="@+id/iv_detail_logo"
                app:layout_constraintStart_toStartOf="@+id/iv_detail_logo" />

            <ImageView
                android:id="@+id/iv_detail_image"
                android:layout_width="260dp"
                android:layout_height="170dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/kawasaki"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_roadking" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bong1"
                app:layout_constraintBottom_toBottomOf="@+id/iv_detail_image"
                app:layout_constraintEnd_toEndOf="@+id/iv_detail_image"
                app:layout_constraintStart_toStartOf="@+id/iv_detail_image" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Special"
                android:textSize="16dp"
                android:fontFamily="@font/yellowtail"
                android:textColor="@color/mauxanh"
                app:layout_constraintEnd_toEndOf="@+id/tv_roadking"
                app:layout_constraintHorizontal_bias="0.541"
                app:layout_constraintStart_toStartOf="@+id/tv_roadking"
                app:layout_constraintTop_toBottomOf="@+id/iv_detail_logo" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/bong" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="315dp"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_item_hangxe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="11dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/detail2" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView15"
                app:srcCompat="@drawable/detail3" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView14"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/detail1" />

            <TextView
                android:id="@+id/tv_volum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/popp_semol"
                android:text="1202"
                android:textSize="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView13" />

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/popp_semol"
                android:text="230"
                android:textSize="21dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_volum"
                app:layout_constraintStart_toEndOf="@+id/tv_cm"
                app:layout_constraintTop_toBottomOf="@+id/imageView15"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="82dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/popp_semol"
                android:text="247"
                android:textSize="21dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_speed"
                app:layout_constraintStart_toEndOf="@+id/tv_speed"
                app:layout_constraintTop_toBottomOf="@+id/imageView14"
                app:layout_constraintVertical_bias="0.2" />

            <TextView
                android:id="@+id/tv_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/poppinregular"
                android:text="cmÂ³"
                android:textColor="@color/dennhat"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_volum"
                app:layout_constraintStart_toEndOf="@+id/tv_volum" />

            <TextView
                android:id="@+id/tv_kmh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/poppinregular"
                android:text="Km/h"
                android:textSize="10dp"
                android:textColor="@color/dennhat"
                app:layout_constraintBottom_toBottomOf="@+id/tv_speed"
                app:layout_constraintStart_toEndOf="@+id/tv_speed" />

            <TextView
                android:id="@+id/tv_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/poppinregular"
                android:text="Kg"
                android:textSize="10dp"
                android:textColor="@color/dennhat"
                app:layout_constraintBottom_toBottomOf="@+id/tv_mass"
                app:layout_constraintStart_toEndOf="@+id/tv_mass"
                app:layout_constraintTop_toTopOf="@+id/tv_mass"
                app:layout_constraintVertical_bias="0.65" />

            <TextView
                android:id="@+id/tv_fuel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinblack_medium"
                android:text="Fuel Capacity: "
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_engine1" />

            <TextView
                android:id="@+id/tv_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/poppinblack_medium"
                android:text="12.5 L"
                android:textSize="16dp"
                android:textColor="@color/dennhat"
                app:layout_constraintBottom_toBottomOf="@+id/tv_fuel1"
                app:layout_constraintStart_toEndOf="@+id/tv_fuel1" />

            <TextView
                android:id="@+id/tv_engine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppinblack_medium"
                android:text="Engine: "
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppinblack_medium"
                android:text="Amount: "
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/poppinblack_medium"
                android:text="Name: "
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_volum" />

            <TextView
                android:id="@+id/tv_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:fontFamily="@font/poppinblack_medium"
                android:text="Kawasaki"
                android:textColor="@color/dennhat"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_amount_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:fontFamily="@font/poppinblack_medium"
                android:text="2"
                android:textColor="@color/dennhat"
                android:textSize="16dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_engine1"
                app:layout_constraintStart_toEndOf="@+id/tv_amount1"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/popp"
                android:text="5.999"
                android:textSize="26dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_rp"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/popp_semol"
                android:text="$"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_detail_price" />

            <TextView
                android:id="@+id/tv_engine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:fontFamily="@font/poppinblack_medium"
                android:text="Air-cooled"
                android:textColor="@color/dennhat"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/tv_engine1"
                app:layout_constraintTop_toTopOf="@+id/tv_engine1" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_amount_detail"
                app:layout_constraintStart_toEndOf="@+id/tv_amount_detail"
                app:layout_constraintTop_toTopOf="@+id/tv_amount_detail"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/bike1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
